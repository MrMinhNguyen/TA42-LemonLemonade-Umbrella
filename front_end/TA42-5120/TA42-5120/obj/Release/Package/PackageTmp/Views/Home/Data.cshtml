<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!--custome background Image-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body>
    <style>
        img {
            float: left;
        }

        .outsiderow {
            text-align: center;
            background-color: #F0E68C;
            justify-content: center;
            margin: 150px;
        }

        .UV_detail {
            background-color: lightyellow;
            margin: 70px;
        }

        .insiderow {
            border: 2px solid black;
            margin-top: 10%;
            margin-bottom: 10%;
            margin-right: 8%;
            margin-left: 8%;
            padding: 2px;
            background-color: gold;
        }

        .uvhead {
            font-family: Georgia, Serif;
            font-weight: bold;
        }

        .uvtext {
            font-family: Monaco, Monospace;
            font-weight: bold;
        }

        .uvtool {
            vertical-align: middle;
            background-color: lightyellow;
        }


    </style>


    <div class="container m-5 pt-3 border outsiderow">
        <div class="row">
            <div class="col-sm-5 ml-4 UV_detail">
                <div class="container my-3 border">
                    <h4 class="uvhead"> UV data </h4>
                    <div class="row">
                        <div class="col insiderow shadow">
                            <p class="uvhead">Current<br>UV index</p>
                            <p class="uvtext">@ViewBag.uvr </p>
                        </div>
                        <div class="col insiderow shadow">
                            <p class="uvhead ">Max<br>UV index today</p>
                            <p class="uvtext">@ViewBag.uvrmax </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-3 my-5">
                <img src="~/assets/img/UVLevel.png" alt="UVLevel" style="width:120px;height:300px;margin-left:10px;">
            </div>
            <div class="col uvtool">
                <p>
                    <img src="~/assets/img/sunscreen.jpg" alt="sunscreen" style="width:80px;height:80px;margin-left:10px;">
                    <a href="@Url.Action("Recommend","Home")">
                        Suitable sunscreen
                    </a>
                </p><br><br>
                        <p>
                            <img src="~/assets/img/sunglass.jpg" alt="sunglass" style="width:80px;height:80px;margin-left:10px;">
                            <a href="@Url.Action("Recommend","Home")">
                                Suitable sunglass
                            </a>

                        </p><br><br>
                                <p>
                                    <img src="~/assets/img/umbrella.jpg" alt="umbrella" style="width:80px;height:80px;margin-left:10px;">
                                    <a href="@Url.Action("Recommend","Home")">

                                        Suitable umbrella
                                        </a>
                                </p><br><br>
                                        <p>
                                            <img src="~/assets/img/tshirt.png" alt="clothes" style="width:80px;height:80px;margin-left:10px;">
                                            <a href="@Url.Action("Recommend","Home")">
                                                Suitable clothes
                                                </a>
                                        </p>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script src="main.js"></script>
</body>
</html>


